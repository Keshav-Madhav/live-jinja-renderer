{
  "name": "live-jinja-renderer",
  "displayName": "Live Jinja Renderer",
  "description": "Real-time Jinja2 template preview with markdown, mermaid diagrams, and inline variable extraction",
  "version": "1.0.0",
  "publisher": "KilloWatts",
  "author": {
    "name": "Keshav Madhav"
  },
  "license": "MIT",
  "icon": "favicon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Visualization",
    "Other"
  ],
  "keywords": [
    "jinja",
    "jinja2",
    "template",
    "templating",
    "preview",
    "renderer",
    "markdown",
    "mermaid",
    "python",
    "live-preview"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Keshav-Madhav/live_jinja"
  },
  "homepage": "https://keshav-madhav.github.io/live_jinja/",
  "galleryBanner": {
    "color": "#2D5F3F",
    "theme": "dark"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "jinja-renderer",
          "title": "Live Jinja Renderer",
          "icon": "resources/favicon.svg"
        }
      ]
    },
    "views": {
      "jinja-renderer": [
        {
          "type": "webview",
          "id": "jinjaRendererView",
          "name": "Live Preview"
        }
      ]
    },
    "commands": [
      {
        "command": "live-jinja-tester.render",
        "title": "Open in Editor Pane",
        "icon": "$(play)",
        "category": "Jinja"
      },
      {
        "command": "live-jinja-tester.showSidebar",
        "title": "Open in Sidebar",
        "icon": "$(layout-sidebar-left)",
        "category": "Jinja"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "live-jinja-tester.showSidebar",
          "group": "navigation@1",
          "when": "resourceExtname == '.txt' || resourceExtname == '.jinja' || resourceExtname == '.j2' || editorLangId == 'plaintext' || editorLangId == 'jinja'"
        },
        {
          "command": "live-jinja-tester.render",
          "group": "navigation@2",
          "when": "resourceExtname == '.txt' || resourceExtname == '.jinja' || resourceExtname == '.j2' || editorLangId == 'plaintext' || editorLangId == 'jinja'"
        }
      ],
      "commandPalette": [
        {
          "command": "live-jinja-tester.render"
        },
        {
          "command": "live-jinja-tester.showSidebar"
        }
      ]
    },
    "keybindings": [
      {
        "command": "live-jinja-tester.showSidebar",
        "key": "ctrl+alt+j",
        "mac": "cmd+shift+j"
      },
      {
        "command": "live-jinja-tester.render",
        "key": "ctrl+alt+shift+j",
        "mac": "cmd+shift+alt+j"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "~1.85.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.36.0"
  }
}
